<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.activities.ContactUsActivity">

    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/shape_toolbar2">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="Contact Us"
            android:fontFamily="sans-serif-thin"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_black"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_alignParentStart="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            />

    </RelativeLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/distanceTil"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        app:hintEnabled="false">

        <EditText
            android:id="@+id/messageEt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rec2"
            android:drawablePadding="10dp"
            android:hint="Tell us how we can help"
            android:backgroundTint="@color/gray1"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/fromTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We will respond to you via email"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        android:layout_marginTop="105dp"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/sendChatBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/fromTv"
        android:background="@drawable/shape_button1"
        android:fontFamily="sans-serif-thin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:text="Send"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="30dp"
        android:textStyle="bold"
        android:textColor="@color/white" />

</RelativeLayout>